.hidden-xs.mb-res-50
  %table.table.table-hover
    %thead
      %tr
        %th
          %span.in-grey-600= t('orders.number')
        %th
          %span.in-grey-600= t('orders.completed_at')
        %th
          %span.in-grey-600= t('orders.status')
        %th
          %span.in-grey-600= t('orders.total')
    %tbody
      - @orders.each do |order|
        %tr
          %td
            %span.general-order-number= link_to order.number, order_path(order), class: 'in-gold-500'
          %td
            %span.in-grey-900.font-16.fw-300= order.created_date
          %td
            %span.font-16.in-grey-900.fw-300= order.status_string
          %td
            %strong.font-16= price_to_euro(order.total_price)