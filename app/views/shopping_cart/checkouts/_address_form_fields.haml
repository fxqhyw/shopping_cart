.form-group{class: "#{"has-error" if address_error?(field: :first_name, tag: tag)}"}
  %label.control-label.font-weight-light{for: "firstName"}= t('settings.first_name')
  = text_field_tag "#{tag}[first_name]", "#{address_saved_value(field: :first_name, tag: tag)}", placeholder: t('settings.first_name'), id: "firstName", class: "form-control"
